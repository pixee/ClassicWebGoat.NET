    <location path="resources">
        <system.web>
            <authorization>
                <deny users="*" />
            </authorization>
        </system.web>
    </location>
    -->

  <location path="Content/VerbTamperingAttack.aspx">
    <system.web>
      <authorization>
        <allow verbs="GET" users="Admin"></allow>
        <deny verbs="POST,GET" users="*"></deny>
      </authorization>
    </system.web>
  </location>
</configuration>
